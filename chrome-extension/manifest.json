{
  "manifest_version": 3,
  "name": "HoneyWall",
  "version": "1.0",
  "description": "Phishing Detector for Saudi FinTech sites.",

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scanner.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": ["activeTab", "scripting"],

  "host_permissions": ["<all_urls>"]
}
