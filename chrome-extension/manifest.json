{
  "manifest_version": 3,
  "name": "Saudi PhishGuard",
  "version": "1.0",
  "description": "Report and detect phishing websites",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
